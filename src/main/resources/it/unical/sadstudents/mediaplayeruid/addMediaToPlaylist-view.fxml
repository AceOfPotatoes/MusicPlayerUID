<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="400.0" prefWidth="700.0" styleClass="primaryTemplate" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unical.sadstudents.mediaplayeruid.controller.AddMediaToPlaylistController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="66.0" prefWidth="600.0" spacing="10.0">
               <children>
                  <ImageView fx:id="imageMedia" fitHeight="79.0" fitWidth="106.0" pickOnBounds="true" preserveRatio="true">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </ImageView>
                  <Label fx:id="labelTitle" styleClass="mediaNameLabel" text="..." />
                  <ToolBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS">
                    <items>
                      <Button fx:id="ButtonAddToPlayList" graphicTextGap="5.0" mnemonicParsing="false" onAction="#onAddToPlaylist" styleClass="largeMenuButton" text="Add to Playlist">
                           <graphic>
                              <FontIcon iconLiteral="fa-plus-square" iconSize="14" styleClass="iconsOverBackground" />
                           </graphic>
                        </Button>
                    </items>
                  </ToolBar>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox prefWidth="170.0" spacing="5.0">
                     <children>
                        <HBox prefHeight="27.0" prefWidth="170.0" spacing="2.0">
                           <children>
                              <TextField fx:id="textField" focusTraversable="false" promptText="Search" HBox.hgrow="ALWAYS" />
                           </children>
                           <VBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </VBox.margin>
                        </HBox>
                        <Button fx:id="buttonMusicLibrary" mnemonicParsing="false" onAction="#onMusicLibrary" prefHeight="28.0" prefWidth="159.0" text="Music library" VBox.vgrow="ALWAYS">
                           <VBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </VBox.margin>
                        </Button>
                        <Button fx:id="buttonVideoLibrary" mnemonicParsing="false" onAction="#onVideoLibrary" prefHeight="28.0" prefWidth="159.0" text="Video library" VBox.vgrow="ALWAYS">
                           <VBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
                  <TableView fx:id="tableView" style="-fx-background-color: transparent; -fx-font-size: 14px;" HBox.hgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="title" editable="false" maxWidth="1.7976931348623157E308" prefWidth="110.0" resizable="false" text="Title" />
                        <TableColumn fx:id="artist" editable="false" maxWidth="1.7976931348623157E308" minWidth="4.7999267578125" prefWidth="100.0" resizable="false" text="Artist" />
                        <TableColumn fx:id="album" editable="false" maxWidth="1.7976931348623157E308" resizable="false" text="Album" />
                        <TableColumn fx:id="genre" editable="false" maxWidth="1.7976931348623157E308" minWidth="0.0" prefWidth="70.0" resizable="false" text="Genre" />
                        <TableColumn fx:id="year" editable="false" maxWidth="1.7976931348623157E308" minWidth="0.0" prefWidth="70.0" resizable="false" text="Year" />
                        <TableColumn fx:id="length" editable="false" maxWidth="1.7976931348623157E308" minWidth="48.7999267578125" prefWidth="90.0" resizable="false" text="Length" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" />
                     </HBox.margin>
                  </TableView>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
