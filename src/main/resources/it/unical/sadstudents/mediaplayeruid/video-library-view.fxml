<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane styleClass="primaryTemplate" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unical.sadstudents.mediaplayeruid.controller.VideoLibraryController">
   <children>
      <Label minWidth="450.0" styleClass="sceneHeaders" text="VIDEO LIBRARY" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="5.0">
         <font>
            <Font size="39.0" />
         </font>
      </Label>
      <MenuButton fx:id="menuButtonAdd" graphicTextGap="5.0" layoutX="460.0" layoutY="17.0" mnemonicParsing="false" popupSide="LEFT" styleClass="largeMenuButton" text="Add" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="14.0">
         <items>
            <MenuItem mnemonicParsing="false" onAction="#onAddMedia" styleClass="menuItem" text="Add file(s) to video library">
               <graphic>
                  <FontIcon iconLiteral="fa-file" iconSize="15" />
               </graphic>
            </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#onAddFolder" styleClass="menuItem" text="Add folder(s) to video library">
               <graphic>
                  <FontIcon iconLiteral="fa-folder-open" iconSize="15" />
               </graphic>
            </MenuItem>
         </items>
         <font>
            <Font size="14.0" />
         </font>
         <graphic>
            <FontIcon iconLiteral="fa-film" iconSize="15" styleClass="iconsOverBackground" />
         </graphic>
      </MenuButton>
      <TextField fx:id="textFieldSearch" focusTraversable="false" maxWidth="166.0" minWidth="-Infinity" prefWidth="166.0" promptText="Search" styleClass="secondaryTemplate" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="62.0">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>
      <Button fx:id="btnAddLibraryToQueue" disable="true" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onAddLibraryToQueue" prefWidth="95.0" text="Play All" AnchorPane.leftAnchor="180.0" AnchorPane.topAnchor="62.0">
         <graphic>
            <FontIcon iconLiteral="fa-play" iconSize="15" styleClass="iconsOverBackground" text="" />
         </graphic>
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="btnAddVideoToQueue" disable="true" mnemonicParsing="false" onAction="#onAddMediaPlayQueue" text="Add to queue" AnchorPane.leftAnchor="285.0" AnchorPane.topAnchor="62.0">
         <graphic>
            <FontIcon iconLiteral="fa-plus" iconSize="15" styleClass="iconsOverBackground" />
         </graphic>
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="btnDelete" alignment="CENTER_RIGHT" disable="true" mnemonicParsing="false" onAction="#onDeleteVideo" text="Clear All" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="62.0">
         <graphic>
            <FontIcon iconLiteral="fa-trash" iconSize="15" styleClass="iconsOverBackground" />
         </graphic>
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" styleClass="primaryTemplate" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
        <content>
          <AnchorPane styleClass="primaryTemplate">
               <children>
                  <TilePane fx:id="tilePane" hgap="20.0" minWidth="440.0" styleClass="primaryTemplate" vgap="30.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0" />
               </children>
            </AnchorPane>
        </content>
      </ScrollPane>
   </children>
</AnchorPane>
