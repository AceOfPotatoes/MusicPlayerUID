<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane styleClass="basicTemplate" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unical.sadstudents.mediaplayeruid.controller.HomeController">
   <children>
      <Label maxHeight="-Infinity" minHeight="-Infinity" minWidth="450.0" prefHeight="56.0" styleClass="sceneHeaders" text="HOME" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="5.0">
         <font>
            <Font size="39.0" />
         </font>
      </Label>
      <MenuButton graphicTextGap="5.0" mnemonicParsing="false" popupSide="LEFT" styleClass="largeMenuButton" text="Add" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="17.0">
        <items>
          <MenuItem mnemonicParsing="false" onAction="#addFiles" styleClass="menuItem" text="Media(s)">
               <graphic>
                  <FontIcon iconLiteral="fa-file" iconSize="15" styleClass="menuItem" />
               </graphic>
            </MenuItem>
          <MenuItem mnemonicParsing="false" onAction="#addFolder" styleClass="menuItem" text="Folder(s)">
               <graphic>
                  <FontIcon iconLiteral="fa-folder-open" iconSize="15" styleClass="menuItem" />
               </graphic>
            </MenuItem>
        </items>
         <font>
            <Font size="14.0" />
         </font>
         <graphic>
            <FontIcon iconLiteral="fa-plus" iconSize="15" styleClass="iconsOverBackground" />
         </graphic>
      </MenuButton>
      <ListView fx:id="listView" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="80.0" />
   </children>
</AnchorPane>
