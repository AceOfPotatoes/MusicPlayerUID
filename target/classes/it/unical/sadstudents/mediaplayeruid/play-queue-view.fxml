<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unical.sadstudents.mediaplayeruid.controller.PlayQueueController">
   <children>
      <Label alignment="TOP_LEFT" minWidth="450.0" text="PLAY QUEUE" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="0.0">
         <font>
            <Font size="39.0" />
         </font>
      </Label>
      <TableView fx:id="tableViewQueue" style="-fx-background-color: transparent; -fx-font-size: 14px;" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="100.0">
        <columns>
          <TableColumn fx:id="title" editable="false" prefWidth="163.20001524686813" sortable="false" text="Title" />
          <TableColumn fx:id="artist" editable="false" minWidth="4.7999267578125" prefWidth="78.4000244140625" sortable="false" text="Artist" />
            <TableColumn fx:id="album" editable="false" prefWidth="71.19993591308594" sortable="false" text="Album" />
            <TableColumn fx:id="genre" editable="false" prefWidth="72.0" sortable="false" text="Genre" />
            <TableColumn fx:id="year" editable="false" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" resizable="false" sortable="false" text="Year" />
            <TableColumn fx:id="length" editable="false" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" sortable="false" text="Length" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button fx:id="delete" layoutX="14.0" layoutY="56.0" mnemonicParsing="false" onAction="#deleteQueue" text="Delete" AnchorPane.leftAnchor="5.0">
         <graphic>
            <FontIcon iconLiteral="fa-trash" iconSize="15" styleClass="icons" />
         </graphic>
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <MenuButton layoutX="335.0" layoutY="13.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="127.0" text="Add media" AnchorPane.rightAnchor="5.0">
        <items>
          <MenuItem mnemonicParsing="false" onAction="#addFileToQueue" style="-fx-font-size: 12;" text="Add file to play queue">
               <graphic>
                  <FontIcon iconLiteral="fa-file" iconSize="15" styleClass="icons" />
               </graphic></MenuItem>
          <MenuItem mnemonicParsing="false" onAction="#addFolderToQueue" style="-fx-font-size: 12;" text="Add folder to play queue">
               <graphic>
                  <FontIcon iconLiteral="fa-folder-open" iconSize="15" styleClass="icons" />
               </graphic></MenuItem>
        </items>
         <font>
            <Font size="14.0" />
         </font>
         <graphic>
            <FontIcon iconLiteral="fa-folder-open" iconSize="15" styleClass="icons" />
         </graphic>
      </MenuButton>
      <MenuButton layoutX="79.0" layoutY="56.0" mnemonicParsing="false" text="Add selected file to">
        <items>
          <MenuItem fx:id="addFileToMusicLibrary" mnemonicParsing="false" onAction="#onAddFileToMusicLibrary" text="Music library">
               <graphic>
                  <FontIcon iconLiteral="fa-music" iconSize="15" />
               </graphic>
            </MenuItem>
            <SeparatorMenuItem mnemonicParsing="false" />
            <SeparatorMenuItem mnemonicParsing="false">
               <content>
                  <Label text="Playlists" />
               </content>
            </SeparatorMenuItem>
          <MenuItem fx:id="addFileToPlaylist" mnemonicParsing="false" onAction="#onAddFileToPlaylist" text="Playlists">
               <graphic>
                  <FontIcon iconLiteral="fa-list-ul" iconSize="15" />
               </graphic>
            </MenuItem>
        </items>
         <graphic>
            <FontIcon iconLiteral="fa-plus-square" iconSize="15" styleClass="icons" />
         </graphic>
         <font>
            <Font size="14.0" />
         </font>
      </MenuButton>
   </children>
</AnchorPane>
